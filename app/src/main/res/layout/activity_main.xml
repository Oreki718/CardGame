<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Tianyi"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginStart="100dp"
        android:text="@string/reset"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="100dp"
        android:text="@string/play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/card_left"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="44dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:contentDescription="@string/card_left_description"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/card_middle"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="44dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:contentDescription="@string/card_middle_description"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/card_right"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="44dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:contentDescription="@string/card_right_description"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>